@using HRFlow.Common.ViewModels
@model EmployeeDetailsViewModel
@{
    ViewData["Title"] = "Employee Details";
}

<div class="row">

    <div class="col-md-3">
        <h3 class="h5 text-muted">@ViewData["Title"]</h3>
        <hr />

        <form asp-controller="Home" asp-action="UpdateEmployee" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group mb-2">
                <label for="first-name" class="formbuilder-text-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="first-name" class="formbuilder-text-label">Middle Name</label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="first-name" class="formbuilder-text-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="first-name" class="formbuilder-text-label">IBAN</label>
                <input asp-for="IBAN" class="form-control" />
                <span asp-validation-for="IBAN" class="text-danger"></span>
            </div>
            <input value="@Model.Id" type="hidden" name="Id" />
            <div class="d-flex flex-row-reverse">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
            
        </form>


    </div>

    <div class="col-md-5">
        <h3 class="h5 text-muted">Comments</h3>
        <hr />

        <form asp-controller="Home" asp-action="AddComment" method="post">
            <div class="mb-3">
                <label for="content" class="form-label">Add comment</label>
                <textarea class="form-control" id="content" name="content" rows="3" maxlength="250"></textarea>
            </div>
            <input value="@Model.Id" type="hidden" name="employeeId" />
             <div class="d-flex flex-row-reverse">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>

        <div id="comments-table">
            @foreach (var comment in Model.Comments)
            {
                <div class="card">
                    <div class="card-body">

                        <span class="h5">@comment.AuthorName  <span class="h6">- @comment.LastModified</span></span>
                        <p>@comment.Content</p>
                    </div>
                </div>
            }
        </div>

    </div>

    <div class="col-md-3">
        <h3 class="h5 text-muted">Departments</h3>
        <hr />
        @foreach (var department in Model.Departments)
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title" id="department-1">@department.DepartmentName</h5>
                    <div class="row">
                        <div class="col">
                            <p class="text-muted">Start</p>
                            <p class="start">@department.StartDate</p>
                        </div>
                        <div class=col>
                            <p class="text-muted">End</p>
                            <p class="end">@department.EndDate</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <hr />
        <h3 class="h5 text-muted">Jobs</h3>
        <hr />

    </div>

</div>


<div style="display:none">
    <div class="card" id="department-template">
        <div class="card-body">
            <h5 class="card-title" id="department-1">Card title</h5>
            <div class="row">
                <div class="col">
                    <p class="text-muted">Start</p>
                    <p class="start"></p>
                </div>
                <div class=col>
                    <p class="text-muted">End</p>
                    <p class="end"></p>
                </div>
            </div>
        </div>
    </div>
</div>


